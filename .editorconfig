# EditorConfig: http://editorconfig.org/

root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.gradle]
ij_continuation_indent_size = 2
indent_size = 2
max_line_length = 150

[*.md]
max_line_length = 80

[*.json]
indent_size = 2

[*.py]
indent_size = 2

[*.sh]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{xsd,xml}]
indent_size = 4

[*.{csv,sql}-spec]
trim_trailing_whitespace = false
