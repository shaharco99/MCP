{
  "defaults": {
    "docker_host": "npipe:////./pipe/docker_engine",
    "namespace": "jenkins",
    "provider": "ollama",
    "server": "local-server"
  },
  "mcpServers": {
    "filesystem": {
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "C:/Users/shahar/Repos"
      ],
      "command": "npx",
      "description": "Filesystem MCP server for read/write access to local repository",
      "type": "stdio"
    },
    "git": {
      "args": [
        "-y",
        "git-mcp-server@latest"
      ],
      "command": "npx",
      "type": "stdio"
    },
    "kubernetes": {
      "args": [
        "-y",
        "kubernetes-mcp-server@latest"
      ],
      "command": "npx",
      "type": "stdio"
    },
    "local-server": {
      "description": "Local DevOps MCP server with tools",
      "singleResponsePerToolCall": true,
      "toolTimeout": 120,
      "type": "stdio",
      "url": "http://localhost:8000/mcp"
    },
    "playwright": {
      "args": [
        "@playwright/mcp@latest"
      ],
      "command": "npx",
      "type": "stdio",
      "version": "0.0.1-seed"
    },
    "terraform": {
      "args": [
        "-y",
        "terraform-mcp-server@latest"
      ],
      "command": "npx",
      "type": "stdio"
    }
  },
  "providers": {
    "ollama": {
      "baseUrl": "http://localhost:11434",
      "description": "Local Ollama LLM provider for chat and prompts"
    }
  }
}
